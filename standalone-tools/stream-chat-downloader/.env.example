# LGL Stream Chat Downloader Configuration
# Copy this file to .env and customize as needed

# Output directory for downloaded chat files
LGL_CHAT_OUTPUT_DIR=./output

# Output format: jsonl (recommended for high volume), json, or csv
LGL_CHAT_OUTPUT_FORMAT=jsonl

# Delay between requests in milliseconds (increase if hitting rate limits)
LGL_CHAT_REQUEST_DELAY_MS=100

# Maximum retry attempts on failure
LGL_CHAT_MAX_RETRIES=5

# Base delay for exponential backoff retries (seconds)
LGL_CHAT_RETRY_BASE_DELAY_SECONDS=2.0

# Number of messages to buffer before writing to disk
LGL_CHAT_WRITE_BUFFER_SIZE=100

# Force flush buffer to disk at this interval (seconds)
LGL_CHAT_FLUSH_INTERVAL_SECONDS=5.0

# Log directory
LGL_CHAT_LOG_DIR=./logs

# Log level: DEBUG, INFO, WARNING, ERROR
LGL_CHAT_LOG_LEVEL=INFO

# Write logs to file in addition to console
LGL_CHAT_LOG_TO_FILE=true

# Include Super Chat and Super Sticker messages
LGL_CHAT_INCLUDE_SUPERCHAT=true

# Include membership messages
LGL_CHAT_INCLUDE_MEMBERSHIP=true

# HTTP request timeout in seconds
LGL_CHAT_TIMEOUT_SECONDS=30

# Enable resuming interrupted downloads
LGL_CHAT_ENABLE_RESUME=true

# Save checkpoint every N messages for resume support
LGL_CHAT_CHECKPOINT_INTERVAL=1000
